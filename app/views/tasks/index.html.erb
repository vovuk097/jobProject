<%- model_class = Task -%>

  <h1 align="center"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
<%= will_paginate %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:key) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:reporter) %></th>
      <th><%= model_class.human_attribute_name(:assignee) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
        <% if current_user.has_role? :admin %>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <%end%>
    </tr>
  </thead>
  <tbody  id="share">
      <%= render @tasks %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_task_path,
            :class => 'btn btn-success' %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for (@task), :remote => true do |f| %>

        <h5><p><%=f.label :key %></p></h5>
        <%= f.text_field :key, class: 'form-control' %>

        <h5><p><%= f.label :priority %></p></h5>
        <%= f.select :priority, [['Trivial','trivial'],['Minor','minor'],['Major','major'],['Critical','critical'],['Blocker','blocker']] %>

        <h5><p><%= f.label :reporter %></p></h5>
        <!--<%= f.text_field :reporter, class: 'form-control' %>-->
        <%= f.select(:reporter, options_for_select(@user_email)) %>

        <h5><p><%= f.label :assignee %></p></h5>
        <%= f.select(:assignee, options_for_select(@user_email)) %>

        <h5><p><%= f.label :description %></p></h5>
        <%= f.text_area :description, class: 'form-control' %>

        <%= f.submit 'Save changes', class: 'btn btn-success' %>

        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    tasks_path, :class => 'btn btn-warning' %>
    <% end %>
    </br>
  </div>
</div>